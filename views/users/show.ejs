<%- include("../partials/header")  -%>

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<h1><%= user.name %></h1>
			<div class="card">
				<img class="card-image-top" src="<%= user.avatar %>" alt="user profile image">
				<div class="card-body">
    				<p class="card-text">About me</p>
					<a class="float-right" href="mailto:<%= user.email %>"><%= user.email %></a>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<h3><%= user.username %>'s campgrounds:</h3>
			<ul>
				<% campgrounds.forEach(function(campground) { %>
					<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
				<% }); %>
			</ul>
		</div>
	</div>
</div>

<%- include("../partials/footer")  -%>