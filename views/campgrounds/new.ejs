<%- include ("../partials/header") -%>

<div class="my-class">
    <div class="form">
        <h1 style="text-align: center;">Create a new Campground</h1>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name" required>
            </div>  

            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url" required>
            </div>
			<div class="form-group">
                <input class="form-control" type="text" name="price" placeholder="price(INR)" required>
            </div>
			<div class="form-group">
				<input class="form-control" type='text' name='location' placeholder='Location' required>
			</div>
			<div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!!</button>
            </div>
        </form>
           <a href="/campgrounds">Go Back</a>
    </div> 
</div>

<%- include ("../partials/footer") -%>